var (
	music bool
)

func playMusic() {
	music = true
	setCostume "mute"
	play "background", &PlayOptions{
		Loop: true,
	}
}

func stopMusic() {
	music = false
	setCostume "music"
	play "background", &PlayOptions{
		Action: PlayStop,
	}
}

onClick => {
	if music {
		stopMusic
	} else {
		playMusic
	}
}
